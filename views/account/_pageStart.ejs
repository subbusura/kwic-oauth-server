<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= pageTitle %> Â· Kwic Accounts</title>
    <link rel="stylesheet" href="/static/css/account.css" />
  </head>
  <body>
    <div class="page">
      <aside class="sidebar">
        <div class="brand">Kwic Accounts</div>
        <a
          class="nav-link <%= activeTab === 'general' ? 'active' : '' %>"
          href="/accounts/<%= encodedUserId %>/general"
          <%= activeTab === 'general' ? 'aria-current="page"' : '' %>
          >General</a
        >
        <a
          class="nav-link <%= activeTab === 'security' ? 'active' : '' %>"
          href="/accounts/<%= encodedUserId %>/security"
          <%= activeTab === 'security' ? 'aria-current="page"' : '' %>
          >Security</a
        >
        <a
          class="nav-link <%= activeTab === 'apps' ? 'active' : '' %>"
          href="/accounts/<%= encodedUserId %>/apps"
          <%= activeTab === 'apps' ? 'aria-current="page"' : '' %>
          >Apps</a
        >
        <a class="nav-link" href="/auth/logout">Logout</a>
      </aside>
      <main class="content">
        <header class="topbar">
          <div class="avatar" aria-label="Profile">
            <% if (user.profile_photo_url) { %>
              <img class="avatar-photo" src="<%= user.profile_photo_url %>" alt="Profile photo" />
            <% } else { %>
              <span><%= avatarInitial %></span>
            <% } %>
          </div>
          <div class="muted"><%= displayName %></div>
        </header>
