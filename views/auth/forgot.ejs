<%- include('./_pageStart', { pageTitle: 'Forgot Password' }) %>
  <div class="logo">ATLAS</div>
  <h2>Forgot password</h2>
  <p class="muted">Enter your email and we'll send a reset link if an account exists.</p>
  <% if (error) { %>
    <div class="alert error"><%= error %></div>
  <% } %>
  <% if (sent) { %>
    <div class="alert success">If the email exists, a reset link has been sent.</div>
  <% } %>
  <form class="stack" method="post" action="/auth/forgot">
    <label for="email">Email *</label>
    <input id="email" name="email" type="email" required autocomplete="email" value="<%= email %>" />
    <button type="submit" class="btn btn-primary">Send reset link</button>
  </form>
  <div class="meta">
    Remembered your password? <a href="/auth/login">Back to login</a>
  </div>
<%- include('./_pageEnd') %>
