<%- include('./_pageStart', { pageTitle: 'Reset Password' }) %>
  <% if (invalid) { %>
    <div class="alert error">This reset link is invalid or has expired. Request a new one.</div>
    <a class="btn btn-primary" href="/auth/forgot">Request new reset link</a>
  <% } else { %>
    <h2>Set a new password</h2>
    <% if (error) { %>
      <div class="alert error"><%= error %></div>
    <% } %>
    <form class="stack" method="post" action="/auth/reset-password">
      <input type="hidden" name="token" value="<%= token %>" />
      <label for="password">New Password</label>
      <input id="password" name="password" type="password" required autocomplete="new-password" />
      <label for="confirmPassword">Confirm Password</label>
      <input id="confirmPassword" name="confirmPassword" type="password" required autocomplete="new-password" />
      <div class="muted small">Use at least 8 characters.</div>
      <button type="submit" class="btn btn-primary">Update password</button>
    </form>
  <% } %>
  <div class="meta">
    <a href="/auth/login">Back to login</a>
  </div>
<%- include('./_pageEnd') %>
